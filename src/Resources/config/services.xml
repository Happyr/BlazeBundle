<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

<services>
    <service id="happyr_blaze.config" class="Happyr\BlazeBundle\Model\Configuration">
        <argument>%happyr_blaze.objects%</argument>
    </service>

    <service id="happyr_blaze.blaze_service" class="Happyr\BlazeBundle\Service\BlazeManager">
        <argument type="service" id="happyr_blaze.config"/>
        <argument type="service" id="router"/>
    </service>

    <service id="happyr_blaze.twig_extension" class="Happyr\BlazeBundle\Twig\BlazeExtension">
        <argument type="service" id="happyr_blaze.blaze_service"/>
        <tag name="twig.extension"/>
    </service>
</services>

</container>
