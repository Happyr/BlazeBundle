{
    "name": "happyr/blaze-bundle",
    "type": "symfony-bundle",
    "description": "Write down your routing mapping at one place",
    "keywords": ["routing", "blaze", "dynamic", "route"],
    "homepage": "http://developer.happyr.com/symfony2-bundles/happyr-blaze-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias@happyr.com"
        }
    ],
    "require": {
        "php": "^5.4 || ^7.0",
        "symfony/symfony": "~2.3|~3.0",
        "twig/twig": "~1.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8 || ^5.5",
        "matthiasnoback/symfony-config-test": "^1.4",
        "nyholm/symfony-bundle-test": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Happyr\\BlazeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\Happyr\\BlazeBundle\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
